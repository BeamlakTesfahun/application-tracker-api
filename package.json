{
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:migrate:reset": "prisma migrate reset --force",
        "prisma:studio": "prisma studio",
        "prisma:db:push": "prisma db push",
        "dev": "npm run prisma:generate && npm run prisma:migrate && npm run start:dev",
        "db:reset": "npm run prisma:migrate:reset && npm run prisma:generate",
        "db:studio": "npm run prisma:studio"
    },
    "dependencies": {
        "@nestjs/common": "^11.1.12",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.12",
        "@nestjs/jwt": "^11.0.2",
        "@nestjs/mapped-types": "^2.1.0",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.1.12",
        "@prisma/adapter-pg": "^7.2.0",
        "@prisma/client": "^7.2.0",
        "bcrypt": "^6.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "cookie-parser": "^1.4.7",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.17.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/cookie-parser": "^1.4.10",
        "@types/passport-jwt": "^4.0.1",
        "@types/pg": "^8.16.0",
        "prisma": "^7.2.0"
    }
}
